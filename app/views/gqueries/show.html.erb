<p id="notice"><%= notice %></p>
<p>
  <b>Question:</b>
  <%= @gquery.question %>
</p>

<p>
  <b>Interval:</b>
  <%= @gquery.interval %>  minutes
</p>


<h3>Search results:</h3>
<table class="table table-hover">
  <tr>
    <th>Position</th>
    <th>Page title</th>
    <th>Last updated</th>
  </tr>
<%  @gquery.gresults.each do |r| %>
    <tr>
      <td><%= r.position %>. </td>
      <td><a href="<%= URI.unescape(r.url) %>"><%=  r.title %></a></td>
      <td><%= r.updated_at %></td>
    </tr>
<% end %>
</table>
<%= link_to 'Edit', edit_gquery_path(@gquery), :class =>"btn" %>
<%= link_to 'Back', gqueries_path, :class =>"btn" %>
